generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url       = env("DATABASE_URL")
}

// 7 Categories
// gender
// race
// allegiance
// infected status
// profession
// rarity
// cost
model Operator {
  // Char id based on in game charid
  id Int @id @default(autoincrement())
  charId String @default("x")
  name String @unique
  // Male or Female
  gender String
  race String
  // Group/Team takes priority over Nation
  // Someone might be in different teams under the same nation
  // i.e. Rhodes island teams.
  group String?
  nation String
  profession String
  archetype String
  position String
  // yes, no, N/A, undisclosed.
  infected String
  // 1-6 inc
  rarity Int
  // 0 - however?
  costE0 Int
  costE2 Int
  chosen ChosenOperators[]
}

model ChosenOperators {
  gameId Int @id @default(autoincrement())
  date String
  operator Operator @relation(fields: [operatorId], references: [id])
  operatorId Int
  timesGuessed Int @default(0)
}

enum BlobTags {
  PROJECTS
  HOBBIES
  MUSIC
  GAMES
  MALARKEY
  OTHER
}

model Blob {
  id Int @id @default(autoincrement())
  date String
  edit String?
  title String
  description String?
  tags BlobTags[]
  images String[]
  videos String[]
  likes Int @default(0)
}
